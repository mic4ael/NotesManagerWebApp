{% extends 'DmcsNotesManagerBundle::base.html.twig' %}
{% block title %}
    Home
{% endblock %}

{% block content %}
    <nav id="main-menu" role="navigation" class="navbar navbar-inverse">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('home_path') }}"> 
                Home - {{ app.security.getToken().getUser().getUsername() }} 
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="{{ path('new_note_path') }}"> Create a note </a></li>
                <li><a href="{{ path('new_category_path') }}"> Create a category </a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('logout') }}"> Logout </a></li>
            </ul>
        </div>
    </nav>
    <div class="panel panel-danger">
        <div class="panel-heading">
            {% block panel_heading %}{% endblock %}
        </div>
        <div class="panel-body">
            {% block panel_body %}{% endblock %}
        </div>
    </div>
    {% block other_panels %}{% endblock %}
{% endblock %}