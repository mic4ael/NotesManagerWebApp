{% extends 'DmcsNotesManagerBundle::base.html.twig' %}
{% block title %}
    Login Page
{% endblock %}
{% block content %}
    <div class="app_form bg-success">
        <h1> Login Form </h1>
            {{ form_start(form, {'attr': {'role': 'form'}}) }}
                <div class="form-group">
                    <div class="form-group">
                        {{ form_label(form.username, 'Username') }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, 'Password') }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_widget(form.login, {'attr': {'class': 'btn btn-primary center-block'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                                Register Here!
                            </button>
                        </div>
                    </div>
                </div>
        {{ form_end(form) }}
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}